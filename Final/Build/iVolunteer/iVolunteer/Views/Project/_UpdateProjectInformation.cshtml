@model iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.ProjectInformation

@Html.AntiForgeryToken()
<div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
    <div class="modal-body">
        <div class="row">

            <!-- Login -->
            <div class="col-md-12">
                <div class="row" style="margin: -10px 0 -5px 0;">
                    <div class="col-sm-12">
                        <h4>Thay đổi thông tin dự án</h4>
                    </div>
                </div>
                <div class="divider-holizon"></div>

                <!--form role="form" class="login-form"> -->
                @using (Ajax.BeginForm("UpdateProjectInformation", "Project", null, new AjaxOptions { UpdateTargetId = "project-tab", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }, new { @id = "formValidation", @class = "register-form", @style = "margin-top: 30px" }))
                {
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            <input type="hidden" name="projectID" value="@Model.ProjectID" />
                            <!-- Project Name -->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                    <label for="projectName">Tên dự án:</label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.DisplayFor(model => model.ProjectName, new { htmlAttributes = new { @id = "projectName", @class = "form-control", @placeholder = "Tên dự án..." } })
                                    @Html.HiddenFor(model => model.ProjectName)
                                </div>
                            </div>

                            <!-- Date Start -->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @*@Html.LabelFor(model => model.DateStart, htmlAttributes: new { @class = "control-label" })*@
                                    <label for="dateStart">Ngày bắt đầu:</label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @id = "dateStart", @class = "form-control", @placeholder = "Ngày bắt đầu...", @type="text", @Value = Model.DateStart.ToString(" yyyy/MM/dd") } })
                                    @Html.ValidationMessageFor(model => model.DateStart, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Date End-->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @*@Html.LabelFor(model => model.DateEnd, htmlAttributes: new { @class = "control-label" })*@
                                    <label for="dateEnd">Ngày kết thúc:</label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.EditorFor(model => model.DateEnd, new { htmlAttributes = new { @id = "dateEnd", @class = "form-control", @placeholder = "Ngày kết thúc...", @type="text", @Value = Model.DateEnd.ToString(" yyyy/MM/dd") } })
                                    @Html.ValidationMessageFor(model => model.DateEnd, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Project Description -->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @* @Html.LabelFor(model => model.ProjectDescription, htmlAttributes: new { @class = "control-label" })*@
                                    <label for="projectShortDescription">Mô tả tóm tắt: </label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.TextAreaFor(model => model.ProjectShortDescription, new { @id = "projectShortDescription", @class = "form-control", @rows = "3", @placeholder = "Mô tả ngắn gọn về dự án...", @style = "resize: vertical; margin-bottom: 4px" })
                                    @Html.ValidationMessageFor(model => model.ProjectShortDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Project Description -->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @* @Html.LabelFor(model => model.ProjectDescription, htmlAttributes: new { @class = "control-label" })*@
                                    <label for="projectFullDescription">Mô tả chi tiết: </label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.TextAreaFor(model => model.ProjectFullDescription, new { @id = "projectFullDescription", @class = "form-control", @rows = "6", @placeholder = "Mô tả chi tiết về dự án...", @style = "resize: vertical; margin-bottom: 4px" })
                                    @Html.ValidationMessageFor(model => model.ProjectFullDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                    <label for="projectName">Địa điểm</label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @id = "location", @class = "form-control", @placeholder = "Địa điểm" } })
                                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                    <label for="projectName">Email</label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @id = "email", @class = "form-control", @placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="row">
                                <div class="col-xs-4 register-label">
                                    @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                    <label for="projectName">Điện thoại</label>
                                </div>
                                <div class="col-xs-6 text-input">
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @id = "phone", @class = "form-control", @placeholder = "Phone" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                            <!--Tag checkbox list-->
                    <div class="row" style="margin-top: 15px;">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-3 col-xs-6 col-sm-offset-2" style="margin-top: 5px; margin-bottom: 5px">
                                    <div class="row">
                                        <label>Chủ đề tình nguyện</label>
                                        <div class="checkbox">
                                            <input id="education" type="checkbox" class="row" value="Giáo dục" name="tagsList" @(Model.TagsString.Contains("Giáo dục") ? "checked" : "" ) />
                                            <label for="education">
                                                Giáo dục
                                            </label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="culture" type="checkbox" class="row" value="Văn hóa" name="tagsList" @(Model.TagsString.Contains("Văn hóa") ? "checked" : "" ) />
                                            <label for="culture">Văn hóa</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="medical" type="checkbox" class="row" value="Y tế" name="tagsList" @(Model.TagsString.Contains("Y tế") ? "checked" : "" ) />
                                            <label for="medical">
                                                Y tế
                                            </label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="society" type="checkbox" class="row" value="Xã hội" name="tagsList" @(Model.TagsString.Contains("Xã hội") ? "checked" : "" ) />
                                            <label for="society">Xã hội</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="environment" type="checkbox" class="row" value="Môi trường" name="tagsList" @(Model.TagsString.Contains("Môi trường") ? "checked" : "" ) />
                                            <label for="environment">Môi trường</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="travel" type="checkbox" class="row" value="Du lịch" name="tagsList" @(Model.TagsString.Contains("Du lịch") ? "checked" : "" ) />
                                            <label for="travel">Du lịch</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="sport" type="checkbox" class="row" value="Thể thao" name="tagsList" @(Model.TagsString.Contains("Thể thao") ? "checked" : "" ) />
                                            <label for="sport">Thể thao</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3 col-xs-6" style="margin-top: 5px; margin-bottom: 5px">
                                    <div class="row">
                                        <label>Đối tượng hướng đến</label>
                                        <div class="checkbox">
                                            <input id="children" type="checkbox" class="row" value="Trẻ em" name="tagsList" @(Model.TagsString.Contains("Trẻ em") ? "checked" : "" ) />
                                            <label for="children">Trẻ em</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="poorpeople" type="checkbox" class="row" value="Người nghèo" name="tagsList" @(Model.TagsString.Contains("Người nghèo") ? "checked" : "" ) />
                                            <label for="poorpeople">Người nghèo</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="disabilities" type="checkbox" class="row" value="Người khuyết tật" name="tagsList" @(Model.TagsString.Contains("Người khuyết tật") ? "checked" : "" ) />
                                            <label for="disabilities">Người khuyết tật</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="disasterarea" type="checkbox" class="row" value="Vùng thiên tai" name="tagsList" @(Model.TagsString.Contains("Vùng thiên tai") ? "checked" : "" ) />
                                            <label for="disasterarea">Vùng thiên tai</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="animal" type="checkbox" class="row" value="Động vật" name="tagsList" @(Model.TagsString.Contains("Động vật") ? "checked" : "" ) />
                                            <label for="animal">Động vật</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3 col-xs-6" style="margin-top: 5px; margin-bottom: 5px">
                                    <div class="row">
                                        <label>Hình thức hoạt động</label>
                                        <div class="checkbox">
                                            <input id="charity" type="checkbox" class="row" value="Ủng hộ" name="tagsList" @(Model.TagsString.Contains("Ủng hộ") ? "checked" : "" ) />
                                            <label for="charity">Ủng hộ</label>
                                        </div>
                                        <div class="checkbox">
                                            <input id="fieldtrip" type="checkbox" class="row" value="Đi thực tế" name="tagsList" @(Model.TagsString.Contains("Đi thực tế") ? "checked" : "" ) />
                                            <label for="fieldtrip">Đi thực tế</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-4 text-input" style="text-align: center; margin-top: 10px">
                                        <label style="color:red;">@ViewBag.Message</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- Button -->
                            <div class="col-xs-2 col-xs-offset-7 text-input" style="padding-right: 10px; text-align: right">
                                @Ajax.ActionLink("Hủy", "ProjectInformation", "Project", new { projectID = Model.ProjectID }, new AjaxOptions { UpdateTargetId = "project-tab", InsertionMode = InsertionMode.Replace }, new { @type = "button", @class = "btn btn-default" })
                            </div>
                            <div class="col-xs-2 text-input">
                                <button type="submit" class="btn btn-register">CẬP NHẬT</button>
                            </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dateStart').datetimepicker({
            format: 'YYYY/MM/DD'
        });
        $('#dateEnd').datetimepicker({
            format: 'YYYY/MM/DD'
        });
    });
</script>