@model List<iVolunteer.Models.MongoDB.EmbeddedClass.ItemClass.SubTask>

@if (Model.Count != 0)
{
    foreach (var item in Model)
    {
        <li>
            <div>
                <div class="row">
                    <div class="col-sm-12">
                        @if (item.Priolity == 1)
                        {
                            <div class="priolity low" id="@("priolity" + item.SubTaskID)"></div>
                        }
                        else if (item.Priolity == 2)
                        {
                            <div class="priolity medium" id="@("priolity" + item.SubTaskID)"></div>
                        }
                        else
                        {
                            <div class="priolity high" id="@("priolity" + item.SubTaskID)"></div>
                        }
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-1">
                                <div class="checkbox" style="margin-bottom: 0">
                                    @if (item.IsDone == 3)
                                    {
                                        <input type="checkbox" checked disabled>
                                    }
                                    else
                                    {
                                        <input type="checkbox" disabled>
                                    }
                                    <label></label>
                                </div>
                            </div>
                            <div class="col-sm-11" style="padding-left: 0; padding-top: 10px;">
                                <label style="font-weight: normal; text-decoration: line-through; font-style: italic;">@item.Content</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <ul class="list-task-infor">
                            <li>
                                @if (item.IsDone == 1)
                                {
                                    <span class="badge is-unread-notification txt-complete">ĐANG CHỜ</span>
                                }
                                else if (item.IsDone == 2)
                                {
                                    <span class="badge is-due-past txt-complete">ĐANG THỰC HIỆN</span>
                                }
                                else if (item.IsDone == 3)
                                {
                                    <span class="badge is-complete txt-complete">ĐÃ HOÀN THÀNH</span>
                                }
                                else
                                {
                                    <span class="badge is-due-past txt-complete">THỰC HIỆN LẠI</span>
                                }
                            </li>
                            <li>
                                <i class="material-icons md-18 md-myred">access_time</i>
                                <span class="overdue txt-complete">@item.Deadline</span>
                            </li>
                            <li>
                                <i class="material-icons md-18 md-mygray">perm_identity</i>
                                <span class="assign-people txt-complete">@item.AssignPeople.DisplayName</span>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </li>
    }
}
else
{

}