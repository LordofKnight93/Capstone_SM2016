@using iVolunteer.Common

@if (ViewBag.IsLiked == true)
{
    @Ajax.RawActionLink("<span class='fa fa-heart fa-cus-18' style='color: #ef5350'></span>", "DislikeAlbum", "Group", new { albumID = ViewBag.AlbumID }, new AjaxOptions { UpdateTargetId = "likeArea" + ViewBag.AlbumID, InsertionMode = InsertionMode.Replace }, new { @type = "button", @class = "btn-card", @style = "color: rgb(225, 115, 115); font-size: 1.1em" })

    if (ViewBag.LikeCount != 0)
    {
        <span style="color: #ef5350; font-size: 0.8em">@ViewBag.LikeCount</span>
    }
    else
    {
        <span style="color: #aab8c2; font-size: 0.8em"></span>
    }
}
else
{
    @Ajax.RawActionLink("<span class='fa fa-heart fa-cus-18' style='color: #aab8c2'></span>", "LikeAlbum", "Group", new { albumID = ViewBag.AlbumID }, new AjaxOptions { UpdateTargetId = "likeArea" + ViewBag.AlbumID, InsertionMode = InsertionMode.Replace }, new { @type = "button", @class = "btn-card", @style = "color:gray; font-size: 1.1em" })
    if (ViewBag.LikeCount != 0)
    {
        <span style="color: #aab8c2; font-size: 0.8em">@ViewBag.LikeCount</span>
    }
    else
    {
        <span style="color: #aab8c2; font-size: 0.8em"></span>
    }

}



