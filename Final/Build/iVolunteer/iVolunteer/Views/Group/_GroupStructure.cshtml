@using iVolunteer.Common
<!--Leader-->
<div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
    <div class="row">
        <div class="col-sm-12" style="margin-top: -20px">
            <h4>Thành Viên</h4>
            <div class="divider-holizon"></div>
        </div>
    </div>

    <div class="row" style="margin-bottom: 10px">
        <div class="col-sm-12">
            <ul class="nav nav-tabs">
                <li class="active" data-toggle = "tab" >
                    @Ajax.RawActionLink("<i class='fa fa-user-secret fa-cus-22' style='margin-right: 10px;'></i><span> TRƯỞNG NHÓM</span>", "GroupLeaders", "Group", new { groupID = ViewBag.GroupID }, new AjaxOptions { UpdateTargetId = "content-panel", InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin('#content-panel')" }, new { })
                </li>
                <li data-toggle = "tab">
                    @Ajax.RawActionLink("<i class='fa fa-user fa-cus-22' style='margin-right: 10px;'></i><span>THÀNH VIÊN</span>", "GroupMembers","Group", new { groupID = ViewBag.GroupID }, new AjaxOptions { UpdateTargetId = "content-panel", InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin('#content-panel')" }, new { })
                </li>
                @if (ViewBag.IsLeader == true)
                {
                <li data-toggle="tab">
                    @Ajax.RawActionLink("<i class='fa fa-user-plus fa-cus-22' style='margin-right: 10px;'></i><span>YÊU CẦU GIA NHẬP</span>", "GroupRequests", "Group", new { groupID = ViewBag.GroupID }, new AjaxOptions { UpdateTargetId = "content-panel", InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin('#content-panel')" }, new { })
                </li>
                }
            </ul>
        </div>
    </div>

    <div class="tab-content" id="content-panel">
        <div id="content-panel" class="tab-pane fade in active">
            @{ Html.RenderAction("GroupLeaders", "Group", new { groupID = ViewBag.GroupID });
            }
            </div>
        </div>
</div>