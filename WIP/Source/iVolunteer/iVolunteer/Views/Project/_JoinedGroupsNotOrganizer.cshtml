@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.GroupInformation>

<div id="joinedGroup" class="tab-pane fade in ">
    <div class="row">
        <div class="col-md-12">
            <div class="sub-container">
                @using (Ajax.BeginForm("AddOrganizedGroups", "Project", new AjaxOptions { UpdateTargetId = "project-tab", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
                {
                <!-- List Groups -->
                    foreach (var item in Model)
                {
                        <div id="@item.GroupID">
                            <div class="divider-holizon"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <img src="@item.Get_AvatarLink()" style="width: 100%; height: calc(width)">
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="row">
                                                <a href="@Url.Action("GroupHome", "Group", new { groupID = item.GroupID })" style="font-weight: bold; color: #049f88">@Html.DisplayFor(modelItem => item.GroupName)</a>
                                            </div>
                                            <div class="row">
                                                <label style="font-weight: normal">@Html.DisplayFor(modelItem => item.GroupDescription)</label>
                                            </div>
                                            <div class="row">
                                                <table style="font-size: 14px;" width="60%">
                                                    <tr>
                                                        <td style="color: #049f88;">THÀNH VIÊN</td>
                                                        <td>@Html.DisplayFor(modelItem => item.MemberCount)</td>
                                                    </tr>
                                                </table>
                                            </div>
                                            <input type="checkbox" name="groupID" value="@item.GroupID" id="@item.GroupID" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="divider-holizon"></div>
                        </div>
                    }
                <!-- Footer -->
                    <div class="row">
                        <!-- Search bar -->
                        <div class="col-sm-12">
                            <div class="divider-holizon"></div>
                        </div>
                        <input type="hidden" name="projectID" value="@ViewBag.ProjectID" />
                        <button type="submit" class="btn btn-register" data-toggle="modal" data-target="#popup">XÁC NHẬN</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
