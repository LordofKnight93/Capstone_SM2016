@model iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.ProjectInformation

@Html.AntiForgeryToken()
@*<div id="createProjectForm" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg modal-md">
        <div class="modal-content">*@
            <div class="modal-body">
                <div class="row">
                   
                    <!-- Login -->
                    <div class="col-md-12">
                        <div class="row">
                            <div class="row" style="margin: -10px 0 -5px 0;">
                                <div class="col-sm-12">
                                    <h4>Tạo hoạt động mới</h4>
                                </div>
                            </div>
                        </div>
                        <div class="divider-holizon"></div>
                        <div class="row">
                            <div class="col-sm-10 col-sm-offset-1">
                                <!--form role="form" class="login-form"> -->
                                @using (Ajax.BeginForm("CreateProject", "Project", null, new AjaxOptions { UpdateTargetId = "popup-content", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }, new { @id = "formValidation", @class = "register-form", @style = "margin-top: 30px" }))
                                {
                                    <!-- Project Name -->
                                    <div class="row">
                                        <div class="col-xs-4 register-label">
                                            @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                            <label for="projectName">Tên dự án:</label>
                                            <span class="required-field">*</span>
                                        </div>
                                        <div class="col-xs-5 text-input">
                                            @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @id = "projectName", @class = "form-control", @placeholder = "Tên dự án..." } })
                                            @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Date Start -->
                                    <div class="row">
                                        <div class="col-xs-4 register-label">
                                            @*@Html.LabelFor(model => model.DateStart, htmlAttributes: new { @class = "control-label" })*@
                                            <label for="dateStart">Ngày bắt đầu:</label>
                                            <span class="required-field">*</span>
                                        </div>
                                        <div class="col-xs-5 text-input">
                                            @Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @id = "dateStart", @class = "form-control", @placeholder = "Ngày bắt đầu...", @type = "date" } })
                                            @Html.ValidationMessageFor(model => model.DateStart, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Date End-->
                                    <div class="row">
                                        <div class="col-xs-4 register-label">
                                            @*@Html.LabelFor(model => model.DateEnd, htmlAttributes: new { @class = "control-label" })*@
                                            <label for="dateEnd">Ngày kết thúc:</label>
                                            <span class="required-field">*</span>
                                        </div>
                                        <div class="col-xs-5 text-input">
                                            @Html.EditorFor(model => model.DateEnd, new { htmlAttributes = new { @id = "dateEnd", @class = "form-control", @placeholder = "Ngày kết thúc...", @type = "date" } })
                                            @Html.ValidationMessageFor(model => model.DateEnd, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!-- Project Description -->
                                    <div class="row">
                                        <div class="col-xs-4 register-label">
                                            @* @Html.LabelFor(model => model.ProjectDescription, htmlAttributes: new { @class = "control-label" })*@
                                            <label for="projectDescription">Mô tả tóm tắt: </label>
                                        </div>
                                        <div class="col-xs-5 text-input">
                                            @Html.TextAreaFor(model => model.ProjectShortDescription, new { @id = "projectDescription", @class = "form-control", @rows = "4", @placeholder = "Mô tả ngắn gọn về dự án...", @style = "resize: vertical; margin-bottom: 4px" })
                                            @Html.ValidationMessageFor(model => model.ProjectShortDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Location -->
                                    <div class="row">
                                        <div class="col-xs-4 register-label">
                                            @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                            <label for="projectName">Địa điểm</label>
                                        </div>
                                        <div class="col-xs-5 text-input">
                                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @id = "location", @class = "form-control", @placeholder = "Địa điểm" } })
                                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="row">
                                        <div class="col-xs-4 register-label">
                                            @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                            <label for="projectName">Email</label>
                                        </div>
                                        <div class="col-xs-5 text-input">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @id = "email", @class = "form-control", @placeholder = "Email" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Phone -->
                                    <div class="row">
                                        <div class="col-xs-4 register-label">
                                            @* @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" }) *@
                                            <label for="projectName">Điện thoại</label>
                                        </div>
                                        <div class="col-xs-5 text-input">
                                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @id = "phone", @class = "form-control", @placeholder = "Phone" } })
                                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--Tag checkbox list-->
                                    <div class="col-sm-4 col-xs-7" style="margin-top: 5px; margin-bottom: 5px">
                                        <div class="row">
                                            <p class="row">Chủ đề tình nguyện</p>
                                            <div>
                                                <input type="checkbox" class="row" value="Giáo dục" name="tagsList" />Giáo dục
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Văn hóa" name="tagsList" />Văn hóa
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Y tế" name="tagsList"  />Y tế
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Xã hội" name="tagsList"  />Xã hội
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Môi trường" name="tagsList" />Môi trường
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Du lịch" name="tagsList" />Du lịch
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Thể thao" name="tagsList"  />Thể thao
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-4 col-xs-7" style="margin-top: 5px; margin-bottom: 5px">
                                        <div class="row">
                                            <p class="row">Đối tượng hướng đến</p>
                                            <div>
                                                <input type="checkbox" class="row" value="Trẻ em" name="tagsList" />Trẻ em
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Người nghèo" name="tagsList" />Người nghèo
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Người khuyết tật" name="tagsList"  />Người khuyết tật
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Vùng thiên tai" name="tagsList" />Vùng thiên tai
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Động vật" name="tagsList" />Động vật
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-4 col-xs-7" style="margin-top: 5px; margin-bottom: 5px">
                                        <div class="row">
                                            <p class="row">Hình thức hoạt động</p>
                                            <div>
                                                <input type="checkbox" class="row" value="Ủng hộ" name="tagsList" />Ủng hộ
                                            </div>
                                            <div>
                                                <input type="checkbox" class="row" value="Đi thực tế" name="tagsList" />Đi thực tế
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12" style="text-align: center; margin-top: 15px;">
                                            <label style="color: red">Vui lòng nhập vào các trường có dấu (*)</label>
                                        </div>
                                    </div>

                                    // Error Message
                                    <div class="row">
                                        <div class="col-xs-8 col-xs-offset-4 text-input" style="text-align: center; margin-top: 10px">
                                            <label style="color:red;">@ViewBag.Message</label>
                                        </div>
                                    </div>
                                    <!-- Button -->
                                    <div class="row" style="margin-top: 60px">
                                        <div class="col-xs-2 col-xs-offset-7 text-input">
                                            <a class="close" data-dismiss="modal" style="padding: 12px 20px 0 0; font-size: 14px;color: #333;background-color: #fff; border-color: #ccc; opacity: .8">HỦY</a>
                                        </div>
                                        <div class="col-xs-2 text-input">
                                            <button type="submit" class="btn btn-register">TẠO</button>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        @*</div>
    </div>
</div>*@