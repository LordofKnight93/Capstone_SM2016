@model iVolunteer.Models.MongoDB.CollectionClass.Mongo_Post
@if (Model != null)
{
    <div class="pinArea"><label><i class="glyphicon glyphicon-pushpin"></i> Bài viết được ghim</label></div>
<div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
    <div class="row">
        <div class="col-sm-7 col-md-7">
            <!-- Post Owner -->
            <table class="table-post-ava">
                <tr>
                    @if (Model.PostInfomation.IsPublic == true)
                    {
                        <td rowspan="2"><img src="@("/Images/Project/Avatar/" + Model.PostInfomation.Destination.ID + ".jpg")" width="40" height="40" style="border-radius:5px"></td>
                        <td class="td"><a href="@Url.Action("ProjectHome","Project", new { projectID = Model.PostInfomation.Destination.ID })" class="user-name">@Model.PostInfomation.Destination.DisplayName</a></td>
                    }
                    else
                    {
                        <td rowspan="2"><img src="@("/Images/User/Avatar/" + Model.PostInfomation.Creator.ID + ".jpg")" width="40" height="40" style="border-radius:5px"></td>
                        <td class="td"><a href="@Url.Action("UserHome","User", new { userID = Model.PostInfomation.Creator.ID })" class="user-name">@Model.PostInfomation.Creator.DisplayName</a></td>
                    }
                </tr>
                <tr>
                    <td class="td" style="color: gray; font-size:90%">@Model.PostInfomation.DateCreate.ToLocalTime()</td>
                </tr>
            </table>
        </div>
        <div class="col-sm-5 col-md-5" style="text-align: right">
            @{Html.RenderAction("ActionToPost", "Project", new { postID = @Model.PostInfomation.PostID, projectID = ViewBag.ProjectID });}
        </div>
    </div>
    <!-- Post Content -->
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="card-content">
                @if (Model.PostInfomation.ImgLink != "")
                {
                    <div class="postImageArea">
                        <a class="fancybox" href="@("/Images/Post/" + Model.PostInfomation.PostID + ".jpg")">
                            <img class="postImage" src="@("/Images/Post/" + Model.PostInfomation.PostID + ".jpg")" />
                        </a>
                    </div>
                }
                <p style="white-space: pre-line;">@Model.PostInfomation.Content</p>
            </div>
        </div>
    </div>
    <div class="divider-holizon"></div>
    <!-- Interaction Panel -->
    <div class="row">
        <!-- Interaction Button -->
        <div id="@("likeArea" + Model.PostInfomation.PostID)" class="col-md-6 col-sm-6" style="padding: 0px 35px">
            @{Html.RenderAction("IsLiked", "Project", new { postID = @Model.PostInfomation.PostID });}
        </div>
        <!-- Interaction Counter -->
        <div class="col-md-6 col-sm-6" style="text-align: right; padding-right: 6%">
            <div class="row">
                <ul class="list-interaction">
                    <li>
                        <i class="glyphicon glyphicon-comment" style="color: #9bcaba"></i>
                        @if (Model.CommentList.Count != 0)
                        {
                            <span style="color: #cecece">@Model.CommentList.Count</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="@("commentArea" + Model.PostInfomation.PostID)">
        @{Html.RenderAction("ShowCommentArea", "Project", new { postID = Model.PostInfomation.PostID, projectID = ViewBag.ProjectID });}
    </div>
</div>

                }
<div class="pinArea"><label>Bài viết mới nhất</label></div>
