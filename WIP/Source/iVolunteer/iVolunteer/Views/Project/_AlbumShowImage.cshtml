<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls" data-filter=":even">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>
<div class="card-panel" id="list-image" style="margin: 0.5rem 0 1rem 0;">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4" style="margin-bottom: 10px;">
                    @Ajax.RawActionLink("<i class='fa fa-angle-left fa-cus-18'></i><span> Quay về danh sách Album</span>", "GetAlbumList", "Project", new { projectID = Model.AlbumInformation.TargetID }, new AjaxOptions { UpdateTargetId = "albumList", HttpMethod = "GET" }, new { @style = "color: #1E88E5" })
                </div>
                @if (Session["UserID"] == null)
                {

                }
                else if (ViewBag.Role == "Leader" || Model.AlbumInformation.Creator.ID == Session["UserID"].ToString())
                {
                    <div class="col-md-8" style="text-align: right">
                        @Ajax.RawActionLink("<i class='fa fa-plus fa-cus-18'></i><span> Thêm ảnh</span>", "AlbumAddImage", "Project", new { albumID = Model._id.ToString(), targetID = Model.AlbumInformation.TargetID }, new AjaxOptions { UpdateTargetId = "albumList", InsertionMode = InsertionMode.Replace }, new { @class = "btn-card" })
                        @Ajax.RawActionLink("<i class='fa fa-pencil fa-cus-18'></i><span> Sửa album</span>", "AlbumEditImage", "Project", new { albumID = Model._id.ToString(), targetID = Model.AlbumInformation.TargetID }, new AjaxOptions { UpdateTargetId = "albumList", InsertionMode = InsertionMode.Replace }, new { @class = "btn-card" })
                        @Ajax.RawActionLink("<i class='fa fa-trash-o fa-cus-18'></i><span> Xóa album</span>", "DeleteAlbum", "Project", new { albumID = Model._id.ToString(), targetID = Model.AlbumInformation.TargetID }, new AjaxOptions { UpdateTargetId = "albumList", InsertionMode = InsertionMode.Replace, Confirm = "Bạn có muốn xóa Album này?" }, new { @class = "btn-card" })
                    </div>
                }
            </div>
            <h4><strong> Bộ Ảnh : @Model.AlbumInformation.AlbumName</strong></h4>
            <h5>Mô tả : @Model.AlbumInformation.AlbumDescription</h5>
            <div class="divider-holizon"></div>
        </div>
    </div>
    <div id="links" class="link">
        @if (Model.ImageList != null && Model.ImageList.Count > 0)
        {
                foreach (var item in Model.ImageList)
                {
                     <a href="@item.ImageInformation.ImageUrl" title="@item.ImageInformation.ImageName" data-description="This is a image." style="border: 3px solid #eae9d4; border-radius: 2px;"><img src="@item.ImageInformation.ImageUrl" alt="@item.ImageInformation.ImageName"></a>
                }
        }
        else
        {
            <div style="margin: 20px 0; text-align: center"><p>Không có ảnh nào trong album</p></div>
        }
    </div>

    <div class="divider-holizon"></div>
    <!-- Interaction Panel -->
    <div class="row">
        <!-- Interaction Button -->
        <div id="@("likeArea" + Model.AlbumInformation.AlbumID)" class="col-md-6 col-sm-6" style="padding: 0px 35px">
            @{Html.RenderAction("AlbumIsLiked", "Project", new { albumID = Model.AlbumInformation.AlbumID });}
        </div>
        <!-- Interaction Counter -->
        <div class="col-md-6 col-sm-6" style="text-align: right; padding-right: 6%">
            <div class="row">
                <ul class="list-interaction">
                    <li>
                        <i class="glyphicon glyphicon-comment" style="color: #9bcaba"></i>
                        @if (Model.CommentList.Count != 0)
                        {
                            <span style="color: #cecece">@Model.CommentList.Count</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="@("commentArea" + Model.AlbumInformation.AlbumID)">
        @{Html.RenderAction("AlbumShowCommentArea", "Project", new { albumID = Model.AlbumInformation.AlbumID, projectID = ViewBag.ProjectID });}
    </div>
</div>
<script>

    document.getElementById('links').onclick = function (event) {
        event = event || window.event;
        var target = event.target || event.srcElement,
            link = target.src ? target.parentNode : target,
            options = { index: link, event: event },
            links = this.getElementsByTagName('a');
        blueimp.Gallery(links, options);

    };
</script>
