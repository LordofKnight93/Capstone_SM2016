@if (Session["Role"].ToString() == "User")
{
    @Html.Partial("_PostCreate")
}
@if (ViewBag.Message != null)
{
    <div style="text-align: center; margin: 50px 0;">
        <p>@ViewBag.Message</p>
    </div>
}
else {
    if (@ViewBag.PinnedTitle != null)
    {
        <div class="pinArea"><label style="margin-top: 5px;"><i class="glyphicon glyphicon-pushpin"></i> @ViewBag.PinnedTitle</label></div>
    }
    <div id="pinnedPost">
        @{Html.RenderAction("GetPinnedPost", "Project", new { projectID = ViewBag.ProjectID });}
    </div>
    if (@ViewBag.PostTitle != null)
    {
        <div class="pinArea"><label style="margin-top: 5px;">@ViewBag.PostTitle</label></div>
    }
    <div id="postList">
        @{Html.RenderAction("GetPostList", "Project", new { projectID = ViewBag.ProjectID });}
    </div>
    <a id="loadMorePost" href="" onclick="@("loadMorePostProject(event,'" + ViewBag.ProjectID + "', this.getAttribute('role'))")"></a>
}