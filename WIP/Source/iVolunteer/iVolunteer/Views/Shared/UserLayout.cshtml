<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Images/logo_lite.png" type="image/x-icon" sizes="16x16">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top" style="background-color: #049f88">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" title="Trang chủ" id="logo" href="@Url.Action("Newfeed","Home")" style="padding: 2px 20px"><img src="~/Images/logo.png" alt="iVolunteer" height="45"></a>
            </div>

            <!-- Navbar left -->
            <div id="navbar" class="navbar-collapse collapse">
                
                <div class="col-sm-5 col-md-5 search-box-nav">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập từ khóa để tìm kiếm" name="name">
                            <div class="input-group-btn">
                                <button class="btn btn-search-nav" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }
                </div>

                <!-- Navbar Right -->
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding: 4px 10px 1.5px 15px">
                            <object type="image/svg+xml" data="~/Images/avatar.svg" width="40" height="40" border="1"></object>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Nav header</li>
                            <li><a href="@Url.Action("ChangePassword","Account")">Đổi mật khẩu</a></li>
                            <li><a href="@Url.Action("ChangeInformation","Account")">Đổi thông tin cá nhân</a></li>
                            <li><a href="@Url.Action("LogOut","Account")">Đăng xuất</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <!-------------Body Container------------>
    <div class="container background-container">

         @RenderBody()

    </div>

    <footer class="panel-footer">
        iVolunteer - Mr.Genius
    </footer>

    <!------------Create New Project Fade Modal-------------->
    @{ Html.RenderPartial("~/Views/Project/_CreateProject.cshtml", new ViewDataDictionary());  }
    <!------------Create New Group Fade Modal-------------->
    @{ Html.RenderPartial("~/Views/Group/_CreateGroup.cshtml", new ViewDataDictionary());  }

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @section scripts {
        <script type="text/javascript">
        var frmnewprovider = $("#formValidation");
        $(document).ready(function () {
            frmnewprovider.submit(function (e) {
                e.preventDefault();
                frmnewprovider.validate();
                if (frmnewprovider.valid()) {
                    $.ajax({
                        url: "/Home/Login",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            Email: frmnewprovider.find('#Email').val(),
                            Password: frmnewprovider.find('#Password').val(),
                        }),
                        success: function (result) {
                            //if record was added to db, then...
                            window.location.replace('/Home/Newfeed'); //we can redirect
                            //or simply close our modal.
                            //$('#mdlnewprovider').modal('hide');
                        },
                        error: function (result) {
                            alert('error');
                        }
                    });
                }
            });
        });
        </script>
    }
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/phucvt_custom.js"></script>
    <script src="~/scripts/jquery.validate.js"></script>
</body>
</html>
