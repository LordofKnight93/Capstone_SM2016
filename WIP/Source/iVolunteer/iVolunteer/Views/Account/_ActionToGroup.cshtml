@if (ViewBag.IsUser == true)
{
    if (ViewBag.IsJoined != true)
    {
        if (ViewBag.IsRequested == true)
        {
            @Html.ActionLink(" Hủy yêu cầu ", "CancelGroupJoinRequest", "Account",new { groupID = ViewBag.GroupID }, null);
        }
        else
        {
            @Html.ActionLink(" Xin gia nhập ", "GroupJoinRequest", "Account", new { groupID = ViewBag.GroupID }, null);
        }

        if (ViewBag.IsFollowing == true)
        {
            @Html.ActionLink(" Hủy theo dõi ", "UnfollowGroup", "Account", new { groupID = ViewBag.GroupID }, null);
        }
        else
        {
            @Html.ActionLink(" Theo dõi ", "FollowGroup", "Account", new { groupID = ViewBag.GroupID }, null);
        }
    }

    @Html.ActionLink(" Báo cáo vi phạm ", "ReportGroup", "Account", new { groupID = ViewBag.GroupID }, null);
}
