@if (ViewBag.IsUser == true)
{
    if (ViewBag.IsFriend == true)
    {
        @Html.ActionLink(" Hủy kết bạn ", "CancelFriend", "Account", new { otherID = ViewBag.OtherID }, null);
    }
    else
    {
        if (ViewBag.IsRequested == true)
        {
            @Html.ActionLink(" Hủy yêu cầu ", "CancelFriendRequest", "Account", new { otherID = ViewBag.OtherID }, null);
        }
        else
        {
            @Html.ActionLink(" Kết bạn ", "FriendRequest", "Account", new { otherID = ViewBag.OtherID }, null);
        }
    }
    if (ViewBag.IsSentReport != true)
    {
        @Html.ActionLink(" Báo cáo vi phạm ", "ReportTarget", "Report", new { targetID = ViewBag.OtherID, targetType = 3 }, null);
    }
    else
    {
        @Html.ActionLink(" Hủy báo cáo vi phạm ", "CancelReport", "Report", new { targetID = ViewBag.OtherID, targetType = 3 }, null);
    }
}

