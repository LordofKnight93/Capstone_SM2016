<div class="row">
    <div class="col-md-12">
        <div class="sub-container" id="plancontain">
            <div class="row">

                <!-- On this day task -->
                <div class="col-sm-5" id="testplantarget">

                    <!-- Task Count -->
                    <div id="taskCount">
                        @{ Html.RenderAction("TaskCount", "Plan", new { projectID = ViewBag.ProjectID });}
                    </div>

                    <!-- Detail Task on this day -->
                    <div id="taskOnThisDay" style="margin-top: 15px">
                        @{ Html.RenderAction("ListTaskOfThisDay", "Plan", new { projectID = ViewBag.ProjectID });}
                    </div>

                    <!-- My Task -->
                    <div id="myTask">
                        @{ Html.RenderAction("MyTask", "Plan", new { projectID = ViewBag.ProjectID });}
                    </div>

                </div>

                <!-- Project All Plan -->
                <div class="col-sm-7" id="planPhaseAll">

                    <!-- Phase -->
                    <div id="updatePlanPhaseBox">
                        @{ Html.RenderAction("DetailPlanPhase", "Plan", new { projectID = ViewBag.ProjectID });}
                    </div>

                    @if (ViewBag.IsLeader == true)
                    {
                    <!-- Add Phase -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-panel card-grey">
                                    <!--<label style="font-weight: bold; color: #049f88;">THÊM GIAI ĐOẠN ...</label>-->
                                    @Ajax.ActionLink("THÊM GIAI ĐOẠN ...", "AddPlanPhase", "Plan", new { projectID = ViewBag.ProjectID }, new AjaxOptions { UpdateTargetId = "addPlanPhaseForm", InsertionMode = InsertionMode.Replace }, new { @style = "color: #049f88; font-weight: bold; cursor: pointer" })
                                    <div id="addPlanPhaseForm">

                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-sm-12" style="margin-top: 10px;margin-bottom: 7px;">
                            <div id="showphasecompleted">
                                @Ajax.ActionLink("HIỆN THỊ GIAI ĐOẠN ĐÃ HOÀN THÀNH...", "DetailPlanPhaseIsCompleted", "Plan", new { projectID = ViewBag.ProjectID }, new AjaxOptions { UpdateTargetId = "planPhaseIsCompleted", InsertionMode = InsertionMode.Replace, OnSuccess = "replaceButtonHidePhaseCompleted()" }, new { @style = "color: #000; font-weight: bold; font-size: small; background-color: #eff0f2; padding: 5px; cursor: pointer" })
                            </div>
                            <div id="hidephasecompleted" style="display: none">
                                <a style="color: #000; font-weight: bold; font-size: small; background-color: #eff0f2; padding: 5px; cursor: pointer" onclick="replaceButtonShowPhaseCompleted()">ẨN CÁC GIAI ĐOẠN ĐÃ HOÀN THÀNH</a>
                            </div>
                        </div>
                    </div>

                    <div id="planPhaseIsCompleted">
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>