@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.LinkClass.SDLink>

<div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
    <div class="row" style="margin-top: -18px; margin-bottom: -5px;">
        <div class="col-sm-12">
            <h4>Nhóm đang tham gia</h4>
        </div>
    </div>
    <div class="divider-holizon"></div>
    <!-- List Project -->
    <div class="row">
        <div class="col-sm-12 col-xs-12">
            <ul class="list-navi">
@foreach (var item in Model)
{
                <li><a href="@Url.Action("GroupHome","Group", new { groupID = item.ID })">@item.DisplayName</a></li>
                if (ViewBag.IsMyHome == true)
                {
                    @Html.ActionLink("Rời nhóm", "GroupResign", "Account", new { groupID = item.ID }, null);
                }
}
            </ul>
        </div>
    </div>
</div>