@model iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.PersonalInformation
@using iVolunteer.Common;
<div class="card-panel" style="margin: 0.5rem 0 1rem 0;">

    <div class="row">
        <div class="col-md-12">
            <div class="row">

                <!-- Thông tin cá nhân -->
                <div class="col-sm-5">
                    <div class="row" style="text-align: center">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-9">
                                    <h4>
                                        Thông tin cá nhân
                                    </h4>
                                </div>
                                <div class="col-xs-3">
                                    @if (ViewBag.IsMyHome == true)
                                    {
                                        @*<button class="btn btn-image" title="Chỉnh sửa">
                                            <i class="material-icons md-20 md-mygreen">@Ajax.ActionLink("edit", "UpdatePersonalInformation", "User", null, new AjaxOptions { UpdateTargetId = "user-tab", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</i>
                                        </button>*@
                                        @Ajax.RawActionLink("<i class='material-icons md-20 md-mygreen'>edit</i>", "UpdatePersonalInformation", "User", null, new AjaxOptions { UpdateTargetId = "user-tab", InsertionMode = InsertionMode.Replace, HttpMethod = "GET", OnBegin = "OnBegin('#user-tab')" }, new { @title = "Chỉnh sửa", @style = "display: inline;" })
                                    }
                                </div>
                                <div class="col-xs-12">
                                    <div class="divider-holizon"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <table class="table-user-info" style="width: 100%">
                                <colgroup>
                                    <col width="15%">
                                    <col width="70%">
                                    <col width="15%">
                                </colgroup>
                                <tr>
                                    <td style="text-align: center">
                                        <object type="image/svg+xml" data="~/images/icons/id-card.svg" width="20" height="20"></object>
                                    </td>
                                    <td>
                                        <label style="font-weight: normal" id="namedisplay">@Html.DisplayFor(model => model.RealName)</label>
                                        <input type="text" placeholder="Võ Tôn Phúc" class="form-control" style="display: none" id="txtname">
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center">
                                        <object type="image/svg+xml" data="~/images/icons/gender.svg" width="20" height="20"></object>
                                    </td>
                                    <td>
                                        @if (Model.Gender)
                                        {
                                            <p>Nam</p>
                                        }
                                        else
                                        {
                                            <p>Nữ</p>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center">
                                        <object type="image/svg+xml" data="~/images/icons/birthday.svg" width="20" height="20"></object>
                                    </td>
                                    <td>@Html.DisplayFor(model => model.Birthday)</td>
                                </tr>
                                @if (ViewBag.IsMyHome == true)
                                {
                                    <tr>
                                        <td style="text-align: center">
                                            <object type="image/svg+xml" data="~/images/icons/identifyID.svg" width="20" height="20"></object>
                                        </td>
                                        <td>@Html.DisplayFor(model => model.IdentifyID)</td>
                                    </tr>
                                }
                                <tr>
                                    <td style="text-align: center">
                                        <object type="image/svg+xml" data="~/images/icons/house.svg" width="20" height="20"></object>
                                    </td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                                <tr>
                                    <td style="text-align: center">
                                        <object type="image/svg+xml" data="~/images/icons/mail.svg" width="20" height="20"></object>
                                    </td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <td style="text-align: center">
                                        <object type="image/svg+xml" data="~/images/icons/phone-call.svg" width="20" height="20"></object>
                                    </td>
                                    <td>@Html.DisplayFor(model => model.Phone)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Thông tin tình nguyện -->
                <div class="col-sm-7">
                    <div class="row" style="text-align: center">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-9">
                                    <h4>
                                        Thông tin tình nguyện
                                    </h4>
                                </div>
                                <div class="col-xs-3">
                                    @if (ViewBag.IsMyHome == true)
                                    {
                                        @*<button class="btn btn-image" title="Chỉnh sửa">
                                            <i class="material-icons md-20 md-mygreen">@Ajax.ActionLink("edit", "UpdatePersonalInformation", "User", null, new AjaxOptions { UpdateTargetId = "user-tab", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</i>
                                        </button>*@
                                        @Ajax.RawActionLink("<i class='material-icons md-20 md-mygreen'>edit</i>", "UpdatePersonalInformation", "User", null, new AjaxOptions { UpdateTargetId = "user-tab", InsertionMode = InsertionMode.Replace, HttpMethod = "GET", OnBegin = "OnBegin('#user-tab')" }, new { @title = "Chỉnh sửa", @style = "display: inline;" })
                                    }
                                </div>
                                <div class="col-xs-12">
                                    <div class="divider-holizon"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <table class="table-user-volunteer-info">
                                @*<colgroup>
                                    <col width="30%">
                                    <col width="60%">
                                </colgroup>*@
                                <tr>
                                    <td style="color: #049f88" width="30%">QUAN TÂM</td>
                                    <td style="text-align: justify" width="60%">
                                        @Html.DisplayFor(model => model.Interest)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="color: #049f88" width="30%">KĨ NĂNG</td>
                                    <td style="text-align: justify" width="60%">
                                        @Html.DisplayFor(model => model.Skills)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="color: #049f88" width="30%">KINH NGHIỆM</td>
                                    <td style="text-align: justify" width="60%">
                                        @Html.DisplayFor(model => model.Experience)
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>

<div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
    <div class="row" style="margin-bottom: 10px">
        <div class="col-sm-12">
            <ul class="nav sub-nav-tabs">
                <li class="active"  data-toggle="tab">
                    @Ajax.ActionLink("SỰ KIỆN ĐANG THAM GIA", "CurrentProjects", "User", new { userID = Model.UserID }, new AjaxOptions { UpdateTargetId = "sub-content-panel", InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin('#sub-content-panel')" })
                </li>
                @if (ViewBag.IsMyHome == true)
                {
                    <li data-toggle="tab">
                        @Ajax.ActionLink("LỜI MỜI THAM GIA", "InvitedProjects", "Account", null, new AjaxOptions { UpdateTargetId = "sub-content-panel", InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin('#sub-content-panel')" })
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="tab-content" id="sub-content-panel">
            @{ Html.RenderAction("CurrentProjects", "User", new { userID = Model.UserID });}
    </div>
</div>

