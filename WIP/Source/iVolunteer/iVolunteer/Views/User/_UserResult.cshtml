@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.AccountInformation>

<div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
    <div class="row" style="margin-top: -18px; margin-bottom: -5px;">
        <div class="col-sm-12">
            <h4>Kết quả</h4>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FriendCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectCount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("UserHome","User",new { userID = item.UserID })">
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FriendCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectCount)
                </td>
                <td>
                    @{ Html.RenderAction("ActionToOtherUser", "Account", new { otherID = item.UserID });
                    }
                </td>
            </tr>
                        }

    </table>
</div>