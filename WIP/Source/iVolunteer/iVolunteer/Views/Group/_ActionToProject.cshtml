@using iVolunteer.Common
<ul class="list-action-to-target">
    @if (ViewBag.IsJoined != true)
    {
        if (ViewBag.IsJoinRequested == true)
        {
            <li>
                @*//Hủy yêu cầu tham gia*@
                @Ajax.RawActionLink("<span class='glyphicon glyphicon-log-in my-green' aria-hidden='true'></span><span class='action-to-target-text'>  Hủy yêu cầu tham gia</span>", "CancelRepresentJoinRequest", "Group", new { groupID = ViewBag.GroupID, projectID = ViewBag.ProjectID }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = ViewBag.GroupID, InsertionMode = InsertionMode.Replace, Confirm = " Bạn chăc chắn muốn hủy yêu cầu tham gia dự án này ? (Hành động này không bao gồm việc hủy yêu cầu tham gia của các thành viên đã yêu cầu tham gia dự án)" }, new { @type = "button", @class = "btn btn-default action-to-target-link" })
            </li>
        }
        else
        {
            if (ViewBag.IsRecruiting == true)
            {
                <li>
                    @*//Đại diện nhóm tham gia*@
                    @Ajax.RawActionLink("<i class='material-icons'>group_add</i><span class='action-to-target-text'>  Đại diện nhóm tham gia</span> ", "MemberNotInProject", "Group", new { groupID = ViewBag.GroupID, projectID = ViewBag.ProjectID }, new AjaxOptions { UpdateTargetId = "popup-content", InsertionMode = InsertionMode.Replace }, new { @type = "button", @class = "btn btn-default action-to-target-link" })
                </li>
            }
        }
    }
    else
    {
        //Rời dự án
        <li>
            @Ajax.RawActionLink("<span class='glyphicon glyphicon-log-out' aria-hidden='true'></span><span class='action-to-target-text'>  Rời dự án</span>", "ProjectResign", "Group", new { groupID = ViewBag.GroupID, projectID = ViewBag.ProjectID }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = ViewBag.GroupID, InsertionMode = InsertionMode.Replace, Confirm = " Bạn chăc chắn không muốn tham gia dự án này nữa ? (Hành động này không bao gồm việc rút các thành viên đã tham gia khỏi dự án)" }, new { @type = "button", @class = "btn btn-default action-to-target-link" })
        </li>
    }

    @if (ViewBag.IsSponsored != true)
    {
        if (ViewBag.IsSponsorRequested == true)
        {
            //Hủy yêu cầu ủng hộ
            <li>
                @Ajax.RawActionLink("<i class='material-icons'>money_off</i><span class='action-to-target-text'>  Hủy yêu cầu ủng hộ</span>", "CancelRepresentSponsorRequest", "Group", new { groupID = ViewBag.GroupID, projectID = ViewBag.ProjectID }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = ViewBag.GroupID, InsertionMode = InsertionMode.Replace, Confirm = " Bạn chăc chắn muốn hủy yêu cầu ủng hộ dự án này ? (Hành động này không bao gồm việc hủy yêu cầu ủng hộ của các thành viên đã yêu cầu ủng hộ dự án)" }, new { @type = "button", @class = "btn btn-default action-to-target-link" })
            </li>
        }
        else
        {
            //Đại diện nhóm ủng hộ
            <li>
                @Ajax.RawActionLink("<i class='material-icons'>attach_money</i><span class='action-to-target-text'>  Đại diện nhóm ủng hộ</span>", "MemberNotSponsorProject", "Group", new { groupID = ViewBag.GroupID, projectID = ViewBag.ProjectID }, new AjaxOptions { UpdateTargetId = "popup-content", InsertionMode = InsertionMode.Replace }, new { @type = "button", @class = "btn btn-default action-to-target-link" })
            </li>
        }
    }
    else
    {
        <li>
            <button type="button" class="btn btn-default action-to-target-link" aria-label="Left Align">
                <i class="material-icons md-mygreen">attach_money</i>
                <span class="action-to-target-text"> Đã ủng hộ</span>
            </button>
        </li>
    }
</ul>
