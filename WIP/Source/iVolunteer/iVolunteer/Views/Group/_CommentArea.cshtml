@if (Session["UserID"] != null)
    {
        Html.RenderAction("ShowAddCommentArea", "Group", new { postID = ViewBag.PostID, groupID = ViewBag.GroupID });
    }
<div id="@("commentList" + ViewBag.PostID)"  class="commentList">
    <div class="col-md-12 col-sm-12" style="padding-left: 7%;">
        @Ajax.ActionLink("Xem bình luận khác", "GetCommentList", "Group", new { postID = ViewBag.PostID }, new AjaxOptions { UpdateTargetId = "commentList" + ViewBag.PostID, InsertionMode = InsertionMode.Replace }, new { @id = "showComment" + ViewBag.PostID, @style = "color:#9BCABA" })
    </div>
</div>



