@model iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.PostInformation
<!-- Write post -->
@using (Ajax.BeginForm("AddPost", "Group", new { groupID = ViewBag.GroupID, inSection = ViewBag.InSection }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "postList" }, new { @id = "formValidation", @class = "register-form", @style = "margin-top: 10px" }))
{
    @Html.AntiForgeryToken()
    <div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
        <form class="form-post" style="margin-bottom: 0;">
            <div class="row nav-project">
                <!-- Post Content-->
                @Html.TextAreaFor(model => model.Content, new { @id = "postContent", @class = "write-post-txt", @rows = "4", @placeholder = "Bài đăng của bạn...", @style = "resize: vertical; margin-bottom: 4px" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
            <div class="row" style="margin-top: 10px">
                <!-- Post button -->
                <div class="col-md-10" style="text-align: right">
                    <button class="btn btn-image" type="submit" data-toggle="tooltip" title="Ảnh"><i class="material-icons">landscape</i></button>
                    <button class="btn btn-image" type="submit" data-toggle="tooltip" title="Chèn link"><i class="material-icons">insert_link</i></button>
                    <button class="btn btn-image" type="submit" data-toggle="tooltip" title="Tag"><i class="material-icons md-18">local_offer</i></button>
                    <button class="btn btn-image" type="submit" data-toggle="tooltip" title="Địa Điểm"><i class="material-icons md-20">place</i></button>

                </div>
                <div class="col-md-2">
                    <button class="btn btn-post" type="submit">ĐĂNG BÀI</button>
                </div>

            </div>
        </form>
    </div>
}
