@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.GroupInformation>
@{
    ViewBag.Title = "Kết quả tìm kiếm";
}
<div class="row">

    @if (Session["UserID"] != null)
    {
        <div class="col-md-3" style="margin: 0 0 1rem 0; margin-right: -10px">
            @{ Html.RenderAction("NavigationPanel", "Account");}
        </div>
                }

    <div class="col-md-9" id="main_content">
        <!-- Result Counter -->
        <div class="card-panel" style="margin: 0.5rem 0 1rem 0;">
            <div class="row">
                <div class="col-md-12">
                    <h4>@Model.Count() kết quả</h4>
                </div>
            </div>
        </div>
        @if (Model.Count() > 0)
        {
        <!-- Group 1 -->
        <div class="card-panel" style="margin: 0.5rem 0 1rem 0">
            <div class="row">
                <div class="col-md-12">
@foreach (var item in Model)
{
                    <div class="divider-holizon"></div>
                    <div class="row">
                        <!-- Avata -->
                        <div class="col-sm-2">
                            <img src="@item.Get_AvatarLink()" style="width: 100%; height: calc(width)">
                        </div>

                        <!-- Detail -->
                        <div class="col-sm-10">
                            <div class="row">
                                <a href="@Url.Action("GroupHome", "Group", new { groupID = item.GroupID })" style="font-weight: bold; color: #049f88">@Html.DisplayFor(modelItem => item.GroupName)</a>
                            </div>
                            <div class="row">
                                <label style="font-weight: normal">@Html.DisplayFor(modelItem => item.GroupDescription)</label>
                            </div>
                            <div class="row">
                                <table style="font-size: 14px;" width="60%">
                                    <tr>
                                        <td style="color: #049f88;">THÀNH VIÊN</td>
                                        <td>@Html.DisplayFor(modelItem => item.MemberCount)</td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Interaction Button -->
                            <div class="row" style="margin-top: 10px" id="@item.GroupID">
                                @{ Html.RenderAction("ActionToGroup", "Account", new { groupID = item.GroupID });}
                            </div>
                        </div>
                    </div>
                    <div class="divider-holizon"></div>
}
                </div>
            </div>
        </div>
}
    </div>


</div>