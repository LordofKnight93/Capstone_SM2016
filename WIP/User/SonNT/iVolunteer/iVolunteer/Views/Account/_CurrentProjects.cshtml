@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.ProjectInformation>

<div class="card-panel">
    <div class="row" style="margin-top: -18px; margin-bottom: -5px;">
        <div class="col-sm-12">
            <h4>Sự kiện đang tham gia</h4>
        </div>
    </div>
    <div class="divider-holizon"></div>
    <!-- List Project -->
    <div class="row">
        <div class="col-sm-12 col-xs-12">
            <ul class="list-navi">
                @foreach (var item in Model)
                {
                    <li><a href="@Url.Action("ProjectHome","Project",new { projectID = item.ProjectID })">@item.ProjectName</a></li>
                }
            </ul>
        </div>
    </div>

    <!-- Add New Project -->
    <div class="row">
        <div class="col-xs-12" style="margin-top: 20px">
            @*<a style="font-weight: bold; color: #049f88; cursor: pointer" data-container="body" data-toggle="modal" data-target="#createProjectForm">TẠO DỰ ÁN MỚI ...</a>*@
            @Ajax.ActionLink("TẠO SỰ KIỆN MỚI ...", "CreateProject", "Project", null, new AjaxOptions { UpdateTargetId = "popup-content", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @style = "font-weight: bold; color: #049f88; cursor: pointer", @data_container = "body", @data_toggle = "modal", @data_target = "#popup" })
        </div>
    </div>

</div>