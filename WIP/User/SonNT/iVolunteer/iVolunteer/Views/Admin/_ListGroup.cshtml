@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.GroupInformation>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActivate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActivate)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "GroupHome","Group", new { groupID = item.GroupID }, null) | 
            @if (item.IsActivate)
            {
                @Html.ActionLink("Khóa", "GroupBanned", "Admin", new { groupID = item.GroupID, currentPage = ViewBag.CurrentPage }, null)
            }
            else
            {
                @Html.ActionLink("Kích hoạt", "GroupActivate", "Admin", new { groupID = item.GroupID, currentPage = ViewBag.CurrentPage }, null)
            }
        </td>
    </tr>
}
</table>
@if (ViewBag.CurrentPage > 1)
{
    @Html.ActionLink("Trang trước", "ListGroup", "Admin", new { page = ViewBag.CurrentPage - 1 }, null);
}
@if (Model.Count() == 10)
{
    @Html.ActionLink("Trang sau", "ListGroup", "Admin", new { page = ViewBag.CurrentPage + 1 }, null);
}