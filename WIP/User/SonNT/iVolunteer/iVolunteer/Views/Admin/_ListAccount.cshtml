@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.AccountInformation>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentifyID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActivate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsConfirmed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdentifyID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActivate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsConfirmed)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Information", "User", new { userID = item.UserID }, null) | 
            @if (item.IsActivate)
            {
                @Html.ActionLink("Khóa", "AccountBanned", "Admin", new { userID = item.UserID }, null)
            }
            else
            {
                @Html.ActionLink("Kích hoạt", "AccountActivate", "Admin", new { userID = item.UserID }, null)
            }
        </td>
    </tr>
}

</table>
@if (ViewBag.Previous >= 0) { 
    @Html.ActionLink("Trang trước", "ListAccount", "Admin", new { skip = ViewBag.Previous, number = 10 }, null); }
@if (ViewBag.Next >= 0) { 
     @Html.ActionLink("Trang sau", "ListAccount", "Admin", new { skip = ViewBag.Next, number = 10 }, null); }
