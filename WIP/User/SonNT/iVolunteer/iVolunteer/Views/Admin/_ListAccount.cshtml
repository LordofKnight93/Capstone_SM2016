@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.InformationClass.AccountInformation>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentifyID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActivate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsConfirmed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdentifyID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActivate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsConfirmed)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "UserProfile", "User", new { userID = item.UserID }, null) | 
            @if (item.IsActivate)
            {
                @Html.ActionLink("Khóa", "AccountBanned", "Admin", new { userID = item.UserID, currentPage = ViewBag.CurrentPage }, null)
            }
            else
            {
                @Html.ActionLink("Kích hoạt", "AccountActivate", "Admin", new { userID = item.UserID, currentPage = ViewBag.CurrentPage }, null)
            }
        </td>
    </tr>
}

</table>
@if (ViewBag.CurrentPage > 1)
{
    @Html.ActionLink("Trang trước", "ListAccount", "Admin", new { page = ViewBag.CurrentPage - 1 }, null);
}
@if (Model.Count() == 10)
{
    @Html.ActionLink("Trang sau", "ListAccount", "Admin", new { page = ViewBag.CurrentPage + 1 }, null);
}
