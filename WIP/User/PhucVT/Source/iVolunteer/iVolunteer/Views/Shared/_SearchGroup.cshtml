                <div class="col-md-12">
                    <div class="row">

                        <!-- Avata -->
                        <div class="col-sm-2">
                            <img src="images/5.jpg" style="width: 100%; height: calc(width)">
                        </div>

                        <!-- Detail -->
                        <div class="col-sm-10">
                            <div class="row">
