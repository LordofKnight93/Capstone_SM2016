@model IEnumerable<iVolunteer.Models.MongoDB.EmbeddedClass.ItemClass.Sponsor>

<!-- Member -->
<div class="row">
    <div class="col-md-12">
        <div class="sub-container">

            <!-- Header -->
            <div class="row">
                <div class="col-sm-6">
                    <h4>@Model.Count() người ủng hộ</h4>
                </div>
                <div class="col-sm-2" style="text-align: right">
                </div>

                <!-- Search bar -->
                <div class="col-sm-4">
                    <form role="search">
                        <div class="input-group txt-search">
                            <input type="search" class="form-control" placeholder="Tìm kiếm" name="q" style="color: #000; border-color: #049f88;">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit" data-toggle="tooltip" data-placement="bottom" title="Tìm kiếm" style="border-color: #049f88"><i class="glyphicon glyphicon-search" style="color: #049f88"></i></button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-sm-12">
                    <div class="divider-holizon"></div>
                </div>
            </div>

            <!-- Content -->
            <div class="row">
                @foreach (var item in Model)
                {
                    <div id="@item.SponsorID">
                        <!-- Member -->
                        <div class="col-sm-6 col-xs-12" style="margin-top: 5px; margin-bottom: 5px">
                            <div class="member-container">
                                <div class="row">
                                    <div class="col-xs-5" style="margin-left: 20px">
                                        <div class="row">
                                            <label class="member-name">
                                                @Html.DisplayFor(modelItem => item.SponsorName)
                                            </label>
                                        </div>
                                        <div class="row" style="margin-top: -7px">
                                            <label class="member-sumerise">
                                                @Html.DisplayFor(modelItem => item.SponsorAddress)
                                            </label>
                                        </div>
                                        <div class="row" style="margin-top: -7px">
                                            <label class="member-sumerise">
                                                @Html.DisplayFor(modelItem => item.SponsorEmail)
                                            </label>
                                        </div>
                                        <div class="row" style="margin-top: -7px">
                                            <label class="member-sumerise">
                                                @Html.DisplayFor(modelItem => item.SponsorPhone)
                                            </label>
                                        </div>
                                    </div>
                                    @if (ViewBag.IsLeader == true)
                                    {
                                        <div class="divider-vertical-member"></div>

                                        <div class="col-xs-4">
                                            <div class="row" style="text-align: center">
                                                <label class="member-position" style="font-size: 14px">
                                                </label>
                                            </div>
                                            <div class="row" style="margin-top: -7px; text-align: center">
                                                <label class="member-department">
                                                    @Ajax.ActionLink("Xóa", "DismissSponsoredGuest", "Project", new { sponsorID = item.SponsorID, projectID = ViewBag.ProjectID }, new AjaxOptions { UpdateTargetId = item.SponsorID, InsertionMode = InsertionMode.Replace })
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
