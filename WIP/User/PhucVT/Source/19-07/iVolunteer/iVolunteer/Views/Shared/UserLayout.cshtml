<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Images/logo_lite.png" type="image/x-icon" sizes="16x16">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <!-- Bootstrap Datepicker-->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker.min.css" />

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css' />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    @{
        string userID = Session["UserID"].ToString();
        string displayName = Session["DisplayName"].ToString();
        string role = Session["Role"].ToString();
        string avtlink = "/Images/User/Avatar/" + userID + ".jpg";
    }
    <nav class="navbar navbar-default navbar-fixed-top background-container" style="background-color: #049f88">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" title="Trang chủ" id="logo" href="@Url.Action("Newfeed","Home")" style="padding: 2px 20px"><img src="~/Images/logo.png" alt="iVolunteer" height="45"></a>
            </div>

            <div id="navbar" class="navbar-collapse collapse">

                @if (role == "Admin")
                {

                }
                else
                {
                            <!-- Navbar left -->
                    { Html.RenderPartial("_NotificationPanel", new ViewDataDictionary()); }
                }

                <!-- Search bar -->
                <div class="col-sm-5 col-md-5">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "navbar-form", @role = "search" }))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập từ khóa và chọn trường tìm kiếm" name="name" style="width: 75%; border-right: 0" maxlength="100">
                            <select name="option" class="form-control" style="width: 25%; border-left:0">
                                <option value="User">Bạn Bè</option>
                                <option value="Project">Dự Án</option>
                                <option value="Group">Nhóm</option>
                            </select>
                            <div class="input-group-btn" style="width: 1%">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }

                </div>

                <!-- Navbar Right -->
                <ul class="nav navbar-nav navbar-right">
                    @if (role == "Admin")
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding: 2px 10px 1.5px 15px">
                                <span style="color: #fff; font-weight: bold; line-height: 45px">Quản trị</span>
                                <span class="caret" style="color: #fff"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">BÁO CÁO</li>
                                <li><a href="@Url.Action("DisplayPendingReport","Admin")">Danh sách báo cáo</a></li>
                                <li><a href="@Url.Action("DisplayBannedObjects", "Admin")">Danh sách đình chỉ</a></li>
                            </ul>
                        </li>
                    }
                    <li><a title="Trang chủ" id="logo" href="@Url.Action("Newfeed","Home")" style="color: #fff; font-weight: bold;">Trang chủ</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding: 4px 10px 1.5px 15px">
                            <img src=@avtlink height="30" width="30" style="border: 2px solid #fff; border-radius: 5px">
                            <span style="color: #fff; font-weight: bold; line-height: 45px">@displayName</span>
                            <span class="caret" style="color: #fff"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a data-container="body" data-toggle="modal" data-target="#createProjectForm" style="cursor: pointer">Tạo dự án</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a data-container="body" data-toggle="modal" data-target="#createGroupForm" style="cursor: pointer">Tạo nhóm</a></li>
                            <li role="separator" class="divider"></li>
                            @*<li class="dropdown-header">NGƯỜI DÙNG</li>*@
                            <li><a href="@Url.Action("UserHome", "User", new { userID = userID })">Hồ sơ cá nhân</a></li>
                            <li><a href="@Url.Action("ChangePassword","Account")">Đổi mật khẩu</a></li>
                            <li><a href="@Url.Action("LogOut","Home")">Đăng xuất</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="guide.html">Trợ giúp</a></li>
                            <li><a href="help.html">Hỗ trợ</a></li>
                            <li><a href="report.html">Báo cáo sự cố</a></li>
                        </ul>
                    </li>
                </ul>

            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <!-------------Body Container------------>
    <div class="container background-container">

        @RenderBody()
        <button class="fixedChatButton" onclick="location.href='@Url.Action("ChatRoom", "Home")'"><p>Chatroom</p></button>
    </div>


    <!------------Create New Project Fade Modal-------------->
    <div id="createProjectForm" class="modal fade" role="dialog">
        @{ Html.RenderPartial("~/Views/Project/_CreateProject.cshtml", new ViewDataDictionary());  }
    </div>
    <!------------Create New Group Fade Modal-------------->
    @{ Html.RenderPartial("~/Views/Group/_CreateGroup.cshtml", new ViewDataDictionary());  }

    <!-- Task Detail Form -->
    <div id="taskdetail" class="modal fade" role="dialog">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row" id="mainTaskDetail">

                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/scripts/bootstrap-datetimepicker.min.js"></script>
    @section scripts {
        <script type="text/javascript">
            var frmnewprovider = $("#formValidation");
            $(document).ready(function () {
                frmnewprovider.submit(function (e) {
                    e.preventDefault();
                    frmnewprovider.validate();
                    if (frmnewprovider.valid()) {
                        $.ajax({
                            url: "/Home/Login",
                            type: "POST",
                            contentType: "application/json; charset=utf-8",
                            data: JSON.stringify({
                                Email: frmnewprovider.find('#Email').val(),
                                Password: frmnewprovider.find('#Password').val(),
                            }),
                            success: function (result) {
                                //if record was added to db, then...
                                window.location.replace('/Home/Newfeed'); //we can redirect
                                //or simply close our modal.
                                //$('#mdlnewprovider').modal('hide');
                            },
                            error: function (result) {
                                alert('error');
                            }
                        });
                    }
                });
            });
        </script>
    }
    @*<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/phucvt_custom.js"></script>
    <script src="~/scripts/jquery.validate.js"></script>
    @RenderSection("scripts", required: false)
    @RenderSection("phucvtscripts", required: false)
    <script type="text/javascript">
        //$('.modal').parent().on('show.bs.modal', function (e) { $(e.relatedTarget.attributes['data-target'].value).appendTo('body'); })
    </script>
</body>
</html>
